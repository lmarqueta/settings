# Identity
set realname = "<real name>"

# Account specific
set folder=imaps://mail.example.com:993/
set smtp_url=smtp://username@example.com@smtp.example.com:587/
set imap_user=username@example.com
set imap_pass='********'
set smtp_pass='********'
set ssl_starttls=yes
set ssl_force_tls=yes
set spoolfile=+Inbox
set from="Real Name <username@example.com>"
set record=+Sent
set postponed=+Drafts
set signature="~/.mutt/username.sig"

# Common
set move = no
set copy = yes
set quit = ask-no
set date_format = '!%Y-%m-%d %H:%M:%S %a'
set beep = no
set beep_new = yes
set user_agent = yes
set noconfirmappend
set pager_index_lines = 12
set certificate_file=~/.mutt/certificates
set strict_threads=yes
set folder_format="%2C %t %N %8s %d %f"
set auto_tag = yes
set sort_aux=reverse-date-received       
set sort=threads
set sort_re

# Aliases
set alias_file=~/.mutt/aliases
set sort_alias= alias
set reverse_alias=yes
source $alias_file

# Query command
# set query_command="~/.mutt/adquery.pl %s"
# bind editor <tab> complete-query
# bind editor <down> complete

# Refresh
set timeout=61
set mail_check=60
# bind index <F5> sync-mailbox

# Cache
set header_cache =~/.mutt/cache/headers
set message_cachedir =~/.mutt/cache/bodies

# Forward attachments
set forward_quote=yes
set mime_forward=yes
set mime_forward_rest=yes
set forward_format="Fwd: %s"

# EDITOR
set editor=vim

# Headers
ignore      *
unignore    From: Subject Date To Cc Bcc User-Agent Reply-To
unignore    Newsgroups Followup-To X-Newsreader X-Source-Folder
unignore    X-Spam-Status X-Spam-Report X-Mailer X-Virus-Report X-Web
unhdr_order *
hdr_order   From Reply-To Subject Date To Cc Bcc X-Source-Folder \
    News Follow X-Mailer X-Newsreader User-Agent X-Item-Modified Message X-

